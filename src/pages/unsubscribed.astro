---
import { Image } from 'astro:assets'
import LogoPrimary from '../assets/images/logos/jtbi-logo-primary.svg'
import CloudImage from '../assets/images/textures/jtbi-cloud1-80-opacity.png'
import CloudImageTwo from '../assets/images/textures/jtbi-cloud2-80-opacity.png'
import { SITE_TITLE } from '../consts'
import Layout from '../layouts/Layout.astro'
---

<Layout
  title={`Unsubscribed - ${SITE_TITLE}`}
  description="You have been successfully unsubscribed from our email list."
>
  <header class="h-[80dvh] px-(--site-padding-base) relative flex justify-center items-center">
    <div class="overflow-hidden absolute inset-0">
      <Image
        src={CloudImage}
        alt="Cloud texture background"
        class="absolute top-1/2 left-1/2 w-auto h-auto max-w-md opacity-80 pointer-events-none cloud-drift-one lsa no-repeat"
        role="presentation"
        loading="eager"
      />
      <Image
        src={CloudImageTwo}
        alt="Secondary cloud texture background"
        class="absolute top-1/2 left-1/2 w-auto h-auto max-w-md opacity-80 pointer-events-none cloud-drift-two lsa no-repeat"
        role="presentation"
        loading="eager"
      />
    </div>
    <h1 class="sr-only">{SITE_TITLE}</h1>

    <div class="relative w-full max-w-xl z-10 lsa no-repeat delay-100">
      <LogoPrimary />
    </div>
  </header>
  <main
    class="max-w-screen-lg mx-auto pt-0 pb-(--site-padding-3xl) px-(--site-padding-base) text-center"
  >
    <section id="hero" class="pt-0">
      <h1 class="mb-4 text-pretty text-base-100 font-extrabold lsa no-repeat">Unsubscribed</h1>
      <p class="h4 mb-16 lsa no-repeat">You will no longer receive emails from Frame Bio</p>
      <div class="flex justify-center">
        <a
          href="/"
          class="bg-base-100 border border-secondary focus:outline-none focus:bg-secondary hover:bg-secondary w-52 flex justify-between px-0 z-10 group cursor-pointer"
        >
          <span
            class="p uppercase w-full p-4 font-extrabold group-hover:text-base-100 group-focus:text-base-100 transition-colors duration-200"
            >Back to Site</span
          >
          <div
            class="w-1/3 h-full p-2 flex items-center bg-secondary fill-secondary-content group-hover:fill-base-100 group-focus:fill-base-100 transition-colors duration-200"
          >
            <svg
              class="-rotate-45 group-hover:rotate-0 group-focus:rotate-0 transition-transform duration-200"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Cloud drift animations */
  @keyframes cloudDriftOne {
    0% {
      transform: translate(-50%, -50%) translateX(-25px);
    }
    50% {
      transform: translate(-50%, -50%) translateX(25px);
    }
    100% {
      transform: translate(-50%, -50%) translateX(-25px);
    }
  }

  .cloud-drift-one {
    animation: cloudDriftOne 12s ease-in-out infinite;
  }

  .cloud-drift-two {
    animation: cloudDriftOne 15s ease-in-out infinite;
  }
</style>
