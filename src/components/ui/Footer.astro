---
import Email from '../../assets/images/email.svg'
import TitleHorizontalLight from '../../assets/images/frame-bio_title-horizontal-light-background.svg'
import LocationPin from '../../assets/images/location-pin.svg'
import Phone from '../../assets/images/phone.svg'
import ToTop from '../../assets/images/to-top.svg'
---

<footer class="relative bg-primary-content text-primary z-1000">
  <div class="wrapper grid grid-cols-1 md:grid-cols-2 gap-(--site-padding-lg)">
    <div>
      <!-- Logo -->
      <a
        href="/"
        class="block mb-(--site-padding-lg)"
        aria-label="Frame Bio Home"
        title="Frame Bio Home"
      >
        <TitleHorizontalLight class="max-w-lg" />
      </a>

      <!-- Contact Information -->
      <div class="flex flex-col gap-6 mb-(--site-padding-lg)">
        <!-- Address -->
        <a
          href="https://www.google.com/maps?q=555+NW+Street+St+%23113+Portland,+OR+97209"
          class="flex items-start gap-3 w-full"
        >
          <LocationPin class="size-8" />
          <div>
            <p>555 NW Street St #113</p>
            <p>Portland, OR 97209</p>
          </div>
        </a>

        <!-- Phone -->
        <a href="tel:+15555550044" class="flex items-center gap-3 w-full">
          <Phone class="size-8" />
          <span>(555) 555-0044</span>
        </a>

        <!-- Email -->
        <a href="mailto:hello@frame.bio" class="flex items-center gap-3 w-full">
          <Email class="size-8" />
          <span>hello@frame.bio</span>
        </a>
      </div>
    </div>

    <!-- Right Column: Back to Top & Copyright -->
    <div class="flex flex-col items-end justify-between h-full gap-2 text-right">
      <!-- Back to Top -->
      <a href="#top" class="flex items-start gap-2">
        <span class="uppercase w-24 leading-tight">Back to the top</span>
        <ToTop class="size-6" />
      </a>

      <!-- Copyright -->
      <div class="text-sm opacity-60">
        Copyright {new Date().getFullYear()}, Frame Bio LLC | All rights reserved.
      </div>
    </div>
  </div>
</footer>
